<mvc:View
controllerName="sap.ui.demo.walkthrough.controller.InvoiceList"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc">
    <List
        headerText="{i18n>invoiceListTitle}"
        class="saUiResponsiveMargin"
        width="auto"
        items="{invoice>/Invoices}">
        <items>
            <ObjectListItem
                title="{invoice>SID} x {invoice>TCODE}"
                number="{
                    parts: [{path: 'invoice>LEVEL'}, {path: 'view>/currency'}],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false
                    }
                }"
                numberUnit="{view>/currency}"
                numberState="{= ${invoice>VALUE} > 3 ? 'Error' : 'Success'}">
                <firstStatus>
                    <ObjectStatus text="{
                        path: 'invoice>LEVEL',
                        formatter: '.formatter.statusText'
                    }"/>
                </firstStatus>
                </ObjectListItem>
        </items>
    </List>
</mvc:View>
